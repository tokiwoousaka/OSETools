draw :: [int]
winx :: int
winy :: int
col :: int

main
  col = 0xFF0000
  openwin(256, 256)
  draw()
end

draw()
  drawpoint(winx, winy, col)
  winx = ? eql(255, winx)
         | true -> 0
		 | false -> add(winx, 1)
  winy = ? eql(0, winx)
         | true -> add(winy, 1)
		 | false -> winy 
  col = add(col, 1)
  ? eql(winy, 255)
  | true -> 3
  | false -> draw()
end

